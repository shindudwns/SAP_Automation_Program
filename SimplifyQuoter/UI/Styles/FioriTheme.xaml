<!-- File: UI/Styles/FioriTheme.xaml -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- 폰트 패밀리 (ttf를 Assets/Fonts에 두고 Build Action=Resource 했다는 전제) -->
    <!-- 어셈블리명이 다르면 SimplifyQuoter 부분을 네 프로젝트 명으로 바꿔줘 -->
    <FontFamily x:Key="FioriFont">/SimplifyQuoter;component/Assets/Fonts/#72</FontFamily>
    <FontFamily x:Key="FioriIconFont">/SimplifyQuoter;component/Assets/Fonts/#SAP-icons</FontFamily>
    <FontFamily x:Key="FioriIconFontBS">/SimplifyQuoter;component/Assets/Fonts/#BusinessSuiteInAppSymbols</FontFamily>

    <!-- 예시 브러시 (필요 최소) -->
    <SolidColorBrush x:Key="Fiori.Text" Color="#FF222222"/>
    <SolidColorBrush x:Key="Fiori.Surface" Color="#FFFFFFFF"/>

    <!-- 공용 텍스트 스타일 -->
    <Style x:Key="FioriTextBlock" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FioriFont}"/>
        <Setter Property="Foreground" Value="{StaticResource Fiori.Text}"/>
    </Style>

    <!-- 아이콘 전용(TextBlock로 표시) -->
    <Style x:Key="FioriIcon" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FioriIconFont}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
</ResourceDictionary>
