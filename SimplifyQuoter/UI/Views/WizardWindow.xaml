<!-- File: Views/WizardWindow.xaml -->
<Window
    x:Class="SimplifyQuoter.Views.WizardWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="SM AMERICA, LLC"
    Height="640"
    Width="1000"
    WindowStartupLocation="CenterScreen"
    Background="White">

    <!-- OUTER GRID: three rows -->
    <Grid>
        <Grid.RowDefinitions>
            <!-- Spacer above the stepper -->
            <RowDefinition Height="1"/>
            <!-- Row containing the stepper circles/lines -->
            <RowDefinition Height="76"/>
            <RowDefinition Height="73"/>
            <!-- Content area -->
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- ========================================= -->
        <!-- Row 1: STEP 1..4 CIRCLES (clickable) -->
        <!-- ========================================= -->
        <Grid Grid.Row="2" HorizontalAlignment="Center" Width="740" Height="70" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Step 1 Circle (dark) -->
            <Ellipse x:Name="StepCircle1"
               Grid.Column="0"
               Width="24" Height="24"
               Fill="#555"
               Cursor="Hand"
               MouseLeftButtonUp="StepCircle1_Click" Margin="21,0,21,46"/>
            <TextBlock x:Name="StepLabel1"
                 Text="Upload Data"
                 FontSize="12"
                 Foreground="#555"
                 Margin="0,34,0,-6"
                 HorizontalAlignment="Center" RenderTransformOrigin="0.527,-0.032"/>

            <!-- Connector 1→2 -->
            <Line x:Name="Connector12"
            Grid.Column="1"
            X1="0" Y1="12" X2="150" Y2="12"
            Stroke="#CCC"
            StrokeThickness="2"/>

            <!-- Step 2 Circle (light) -->
            <Ellipse x:Name="StepCircle2"
               Grid.Column="2"
               Width="24" Height="24"
               Fill="#DDD"
               Cursor="Hand"
               MouseLeftButtonUp="StepCircle2_Click" Margin="20,0,20,0" VerticalAlignment="Top"/>
            <TextBlock x:Name="StepLabel2"
                 Grid.Column="2"
                 Text="Select Items"
                 FontSize="12"
                 Foreground="#888"
                 Margin="0,34,0,-6"
                 HorizontalAlignment="Center"/>

            <!-- Connector 2→3 -->
            <Line x:Name="Connector23"
            Grid.Column="3"
            X1="0" Y1="12" X2="150" Y2="12"
            Stroke="#CCC"
            StrokeThickness="2"/>

            <!-- Step 3 Circle (light) -->
			<Ellipse x:Name="StepCircle3"
                 Grid.Column="4"
                 Width="24" Height="24"
                 Fill="#DDD"
                 Cursor="Hand"
                 MouseLeftButtonUp="StepCircle3_Click"
                 Margin="36,2,36,0"
                 VerticalAlignment="Top"/>

			<TextBlock x:Name="StepLabel3"
				Grid.Column="4"
				Text="Review &amp; Confirm"
				FontSize="12"
				Foreground="#888"
				Margin="0,34,0,-6"
				HorizontalAlignment="Center"
				MouseLeftButtonUp="StepCircle3_Click"/>


			<!-- Connector 3→4 -->
            <Line x:Name="Connector34"
            Grid.Column="5"
            X1="0" Y1="12" X2="150" Y2="12"
            Stroke="#CCC"
            StrokeThickness="2"/>

            <!-- Step 4 Circle (light) -->
            <Ellipse x:Name="StepCircle4"
               Grid.Column="6"
               Width="24" Height="24"
               Fill="#DDD"
               Cursor="Hand"
               MouseLeftButtonUp="StepCircle4_Click" Margin="21,2,8,44"/>
            <TextBlock x:Name="StepLabel4"
                 Grid.Column="6"
                 FontSize="12"
                 Foreground="#888"
                 Margin="0,34,0,-6"
                 HorizontalAlignment="Center" Width="53"><Run Language="ko-kr" Text="    "/><Run Text="Process"/></TextBlock>
        </Grid>

        <!-- ========================================= -->
        <!-- Row 2: PAGE HOST (where each UserControl is loaded) -->
        <!-- ========================================= -->
		<ContentControl x:Name="PageHost"
                Grid.Row="3"
                Margin="0"/>
    </Grid>
</Window>
