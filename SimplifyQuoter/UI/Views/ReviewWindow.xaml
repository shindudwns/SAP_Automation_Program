<Window x:Class="SimplifyQuoter.Views.ReviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Review Selection" Height="500" Width="900"
        PreviewKeyDown="Window_PreviewKeyDown">

    <DockPanel Margin="10">

        <!-- Top Controls: Search Box + Process Button -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Name="BtnProcess"
                    Content="Process"
                    Width="100"
                    Margin="0,0,10,0"
                    Click="BtnProcess_Click"/>

            <!-- Search Box -->
            <TextBox x:Name="SearchBox"
                     Visibility="Collapsed"
                     Width="200"
                     Height="24"
                     VerticalAlignment="Center"
                     KeyDown="SearchBox_KeyDown"
                     ToolTip="Type and press Enter to search" />
        </StackPanel>

        <!-- DataGrid -->
        <DataGrid x:Name="ReviewGrid"
                  AutoGenerateColumns="False"
                  CanUserResizeColumns="True"
                  SelectionUnit="Cell"
                  SelectionMode="Extended"
                  SelectedCellsChanged="ReviewGrid_SelectedCellsChanged"
                  GridLinesVisibility="All"
                  HeadersVisibility="Column" />
    </DockPanel>
</Window>
