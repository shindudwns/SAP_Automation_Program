<UserControl x:Class="SimplifyQuoter.Views.ProcessPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White"
             Height="Auto" Width="Auto">

    <UserControl.Resources>
        <!-- Center a CheckBox inside its DataGridCell -->
        <Style x:Key="CenteredCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0"/>
        </Style>

        <!-- A RowStyle that forces every DataGridRow to stay un-highlighted -->
        <Style x:Key="NoHighlightDataGridRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="Black"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- A CellStyle that forces every DataGridCell to stay un-highlighted -->
        <Style x:Key="NoHighlightDataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Foreground" Value="Black"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>


    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Row 0: Server/User info (spans both columns) -->
        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                    Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Server: " FontWeight="Bold" FontFamily="Segoe UI"/>
            <TextBlock Text="{Binding ServerName}" Margin="4,0,0,0" FontFamily="Segoe UI"/>
            <TextBlock Text="   User: " FontWeight="Bold" Margin="20,0,0,0" FontFamily="Segoe UI"/>
            <TextBlock Text="{Binding UserName}" Margin="4,0,0,0" FontFamily="Segoe UI"/>
        </StackPanel>

        <!-- Row 1: ProgressBar + “XX%” overlay (spans both columns) -->
        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,10">
            <ProgressBar x:Name="ProgressBarControl"
                         Minimum="0"
                         Maximum="{Binding TotalCount}"
                         Value="{Binding ProcessedCount}"
                         Height="24"
                         VerticalAlignment="Center"
                         Foreground="#3A7BD5"
                         Background="#E0E0E0"/>
            <TextBlock Text="{Binding PercentText}"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontFamily="Segoe UI"/>
        </Grid>

        <!-- Row 2, Column 0: Left Pane = Failed Items + toolbar -->
        <Border Grid.Row="2" Grid.Column="0"
                Background="White"
                CornerRadius="6"
                BorderThickness="1"
                BorderBrush="#CCCCCC"
                Padding="10"
                Margin="0,0,10,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Toolbar: Select All / Deselect All / Patch Selected -->
                <StackPanel Grid.Row="0"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,0,0,8">
                    <Button x:Name="BtnSelectAll"
                            Content="Select All"
                            Width="88"
                            Height="28"
                            Margin="0,0,6,0"
                            Background="#F0F0F0"
                            Foreground="#333333"
                            FontFamily="Segoe UI"
                            FontSize="12"
                            BorderThickness="0"
                            Click="BtnSelectAll_Click"/>

                    <Button x:Name="BtnDeselectAll"
                            Content="Deselect All"
                            Width="100"
                            Height="28"
                            Margin="0,0,6,0"
                            Background="#F0F0F0"
                            Foreground="#333333"
                            FontFamily="Segoe UI"
                            FontSize="12"
                            BorderThickness="0"
                            Click="BtnDeselectAll_Click"/>

                    <Button x:Name="BtnPatchSelected"
                            Content="Patch Selected"
                            Width="112"
                            Height="28"
                            Background="#3A7BD5"
                            Foreground="White"
                            FontFamily="Segoe UI"
                            FontSize="12"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            IsEnabled="False"
                            Click="BtnPatchSelected_Click"/>
                </StackPanel>

                <!-- Failed Items DataGrid -->
                <DataGrid x:Name="FailedItemsDataGrid"
                          Grid.Row="1"
                          AutoGenerateColumns="False"
                          CanUserResizeColumns="True"
                          IsReadOnly="False"
                          HeadersVisibility="Column"
                          GridLinesVisibility="None"
                          RowBackground="#FFFFFF"
                          AlternatingRowBackground="#F9F9F9"
                          HorizontalGridLinesBrush="#DDDDDD"
                          VerticalGridLinesBrush="#DDDDDD"
                          FontSize="12"
                          FontFamily="Segoe UI"
                          ColumnHeaderHeight="32"
                          RowHeight="28"
                          ItemsSource="{Binding FailedItems}"
                          SelectionMode="Extended"
                          RowStyle="{StaticResource NoHighlightDataGridRowStyle}"
                          CellStyle="{StaticResource NoHighlightDataGridCellStyle}">

                    <!-- Columns -->
                    <DataGrid.Columns>
                        <!-- 1) “Update?” CheckBox column, centered -->
                        <DataGridCheckBoxColumn Header="Update?"
                                                Binding="{Binding IsSelectedToUpdate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                Width="Auto"
                                                ElementStyle="{StaticResource CenteredCheckBoxStyle}"
                                                EditingElementStyle="{StaticResource CenteredCheckBoxStyle}"/>

                        <!-- 2) Item Code (read-only) -->
                        <DataGridTextColumn Header="Item Code"
                                            Binding="{Binding ItemCode}"
                                            IsReadOnly="True"
                                            Width="2*"/>

                        <!-- 3) Old Purchasing Price -->
                        <DataGridTextColumn Header="Old Purchasing"
                                            Binding="{Binding OldPurchasingPrice}"
                                            IsReadOnly="True"
                                            Width="Auto">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Background" Value="#FFF5F5F5"/>
                                    <Setter Property="Padding" Value="4,0"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="FontFamily" Value="Segoe UI"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- 4) New Purchasing Price -->
                        <DataGridTextColumn Header="New Purchasing"
                                            Binding="{Binding NewPurchasingPrice}"
                                            IsReadOnly="True"
                                            Width="Auto">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Background" Value="#E6F4EA"/>
                                    <Setter Property="Padding" Value="4,0"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="FontFamily" Value="Segoe UI"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- 5) Old Sales Price -->
                        <DataGridTextColumn Header="Old Sales"
                                            Binding="{Binding OldSalesPrice}"
                                            IsReadOnly="True"
                                            Width="Auto">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Background" Value="#FFF5F5F5"/>
                                    <Setter Property="Padding" Value="4,0"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="FontFamily" Value="Segoe UI"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- 6) New Sales Price -->
                        <DataGridTextColumn Header="New Sales"
                                            Binding="{Binding NewSalesPrice}"
                                            IsReadOnly="True"
                                            Width="Auto">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Background" Value="#E6F4EA"/>
                                    <Setter Property="Padding" Value="4,0"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="FontFamily" Value="Segoe UI"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>

                    <!-- Override header & cell styles to remove the default selection behavior -->
                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#F0F0F0"/>
                            <Setter Property="Foreground" Value="#333333"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="FontFamily" Value="Segoe UI"/>
                            <Setter Property="FontSize" Value="13"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="Height" Value="32"/>
                        </Style>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderBrush" Value="#DDDDDD"/>
                            <Setter Property="BorderThickness" Value="0,0,1,0"/>
                            <Setter Property="FontFamily" Value="Segoe UI"/>
                            <Setter Property="FontSize" Value="12"/>
                            <Setter Property="Padding" Value="4,2"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.Resources>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Row 2, Column 1: Right Pane = “Console” panel -->
        <Border Grid.Row="2" Grid.Column="1"
                Background="#F5F5F5"
                CornerRadius="6"
                Padding="10"
                SnapsToDevicePixels="True"
                BorderBrush="#CCCCCC"
                BorderThickness="1">
            <DockPanel>
                <!-- Console Header -->
                <TextBlock Text="Console"
                           FontWeight="SemiBold"
                           FontSize="14"
                           FontFamily="Segoe UI"
                           DockPanel.Dock="Top"
                           Margin="0,0,0,8"/>

                <!-- Scrollable list of console messages -->
                <TextBox
                    Text="{Binding ConsoleText,Mode=OneWay}"
                    FontFamily="Consolas"
                    FontSize="12"
                    Foreground="#333333"
                    Background="Transparent"
                    BorderThickness="0"
                    IsReadOnly="True"
                    AcceptsReturn="True"
                    VerticalScrollBarVisibility="Auto"
                    HorizontalScrollBarVisibility="Disabled"
                    TextWrapping="Wrap"/>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
