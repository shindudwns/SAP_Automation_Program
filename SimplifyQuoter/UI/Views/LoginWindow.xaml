<!-- File: Views/LoginWindow.xaml -->
<Window x:Class="SimplifyQuoter.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SM AMERICA, LLC"
        Width="960" Height="600"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI">

    <!-- ===== Theme Resources / Styles (그대로) ===== -->
    <Window.Resources>
        <SolidColorBrush x:Key="AccentBrush" Color="#2563EB"/>
        <SolidColorBrush x:Key="AccentBrushDark" Color="#1E4FD8"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#222222"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#666A73"/>
        <SolidColorBrush x:Key="BorderNeutral" Color="#D0D5DD"/>

        <Style x:Key="LabelText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style x:Key="InputBox" TargetType="Control">
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderNeutral}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Style.Triggers>
                <Trigger Property="IsKeyboardFocusWithin" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                    <Setter Property="BorderThickness" Value="1.5"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox"     BasedOn="{StaticResource InputBox}"/>
        <Style TargetType="PasswordBox" BasedOn="{StaticResource InputBox}"/>
        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderNeutral}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="IsEditable" Value="True"/>
            <Style.Triggers>
                <Trigger Property="IsKeyboardFocusWithin" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                    <Setter Property="BorderThickness" Value="1.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SubtleButton" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderNeutral}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#F3F4F6"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#E5E7EB"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                                Background="{StaticResource AccentBrush}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="{StaticResource AccentBrushDark}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#1C44B8"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Background" Value="#9CA3AF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </Window.Resources>

    <!-- ===== Root ===== -->
    <Grid>
        <!-- 1) 배경 이미지 (Grid의 첫 요소) -->
        <Image Source="pack://application:,,,/Assets/Background_img.png"
       Stretch="UniformToFill"
       RenderOptions.BitmapScalingMode="HighQuality">
            <!--<Image.Effect>
                <BlurEffect Radius=""/>
                -->
            <!-- 6~10 사이 취향대로 -->
            <!--
            </Image.Effect>-->
        </Image>


        <!-- 2) 살짝 어둡게 -->
        <Rectangle IsHitTestVisible="False">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#1A000000" Offset="0.0"/>
                    <!-- 10% -->
                    <!--<GradientStop Color="#33000000" Offset="1.0"/>
                    -->
                    <!-- 20% -->
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>


        <!-- 3) 중앙 카드 -->
        <Border Background="White"
                CornerRadius="12"
                Padding="0"
                Width="415"
                Height="320"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                SnapsToDevicePixels="True" Margin="0,93,0,0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="18" ShadowDepth="2" Opacity="0.15"/>
            </Border.Effect>

            <Canvas>


                <TextBlock FontSize="22" FontWeight="Bold"
                           Foreground="{StaticResource TextPrimary}"
                           Canvas.Left="75" Canvas.Top="34" Height="40" Width="425" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Run Text="SAP"/><Run Text="  Automation Program"/>
                </TextBlock>

                <TextBlock Text="Server" Style="{StaticResource LabelText}"
                           Canvas.Left="89" Canvas.Top="79" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <ComboBox x:Name="txtCompanyDb"
                          Width="250" Canvas.Left="89" Canvas.Top="100"
                          Text="SM_NEW_PROD" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <ComboBoxItem Content="SM_NEW_PROD"/>
                    <ComboBoxItem Content="SM_AMERICA_TEST"/>
                </ComboBox>

                <TextBlock Text="User ID" Style="{StaticResource LabelText}"
                           Canvas.Left="89" Canvas.Top="133" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBox x:Name="txtUserName" Width="250"
                         Canvas.Left="89" Canvas.Top="158" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <CheckBox x:Name="chkRememberId" Content="Remember ID"
                          Foreground="{StaticResource TextSecondary}"
                          Canvas.Left="247" Canvas.Top="197" HorizontalAlignment="Center" VerticalAlignment="Top"/>

                <TextBlock Text="Password" Style="{StaticResource LabelText}"
                           Canvas.Left="89" Canvas.Top="195" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <PasswordBox x:Name="txtPassword" Width="250"
                             Canvas.Left="89" Canvas.Top="221" HorizontalAlignment="Left" VerticalAlignment="Center"/>

                <!--<TextBlock Text="License Code" Style="{StaticResource LabelText}"
                           Canvas.Left="129" Canvas.Top="267" HorizontalAlignment="Left" VerticalAlignment="Center"/>-->
                <TextBox x:Name="txtLicenseCode"
                         FontSize="1" Height="0" Width="0" Padding="1" Canvas.Top="9"
                         TextChanged="txtLicenseCode_TextChanged" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5">
                    <TextBox.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleY="-1"/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </TextBox.RenderTransform>
                </TextBox>

                <Button x:Name="BtnViewLicense" Content="agreement"
                        Style="{StaticResource SubtleButton}"
                        Width="92" Height="28"
                        Canvas.Left="89" Canvas.Top="258"
                        Click="BtnViewLicense_Click" HorizontalAlignment="Left" VerticalAlignment="Center"/>

                <Button x:Name="BtnLogin" Content="Login"
                        Width="80" Height="28"
                        Style="{StaticResource PrimaryButton}"
                        IsDefault="True"
                        Canvas.Left="262" Canvas.Top="258"
                        Click="BtnLogin_Click"
                        IsEnabled="{Binding ElementName=chkAgree, Path=IsChecked}" HorizontalAlignment="Left" VerticalAlignment="Center"/>

                <CheckBox x:Name="chkAgree" Content="I agree"
                          IsChecked="True" IsEnabled="False"
                          Foreground="{StaticResource TextPrimary}"
                          Canvas.Left="194" Canvas.Top="264" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            </Canvas>
        </Border>
    </Grid>
</Window>
