<!-- File: Views/LoginWindow.xaml -->
<Window x:Class="SimplifyQuoter.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    <Grid>
        <!-- Centered white panel (“card”) -->
        <Border Background="White"
                CornerRadius="4"
                Padding="0"
                Width="664"
                Height="422"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                SnapsToDevicePixels="True">
            <!-- Canvas layout for absolute positioning: -->
            <Canvas>
                <!-- 1) Title at the top -->
                <TextBlock
                    FontSize="22"
                    FontWeight="Bold"
                    Foreground="#333"
                    Canvas.Left="50"
                    Canvas.Top="35"
                    Height="40"
                    Width="216"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top">
                    <Run Text="Welcome"/><Run Language="ko-kr" Text=", SAP"/><LineBreak/><Run Language="ko-kr"/>
                </TextBlock>

                <!-- 2) Server Label and ComboBox -->
                <TextBlock Text="Server"
                           FontWeight="SemiBold"
                           Foreground="#555"
                           Canvas.Left="217"
                           Canvas.Top="79"/>
                <ComboBox x:Name="txtCompanyDb"
                          Width="250"
                          Height="28"
                          Padding="4"
                          BorderBrush="#CCC"
                          BorderThickness="1"
                          Background="White"
                          IsEditable="True"
                          Text="SM_NEW_PROD"
                          Canvas.Left="215"
                          Canvas.Top="100">
                    <ComboBoxItem Content="SM_NEW_PROD"/>
                    <ComboBoxItem Content="SM_AMERICA_TEST"/>
                </ComboBox>

                <!-- 3) User Name Label and TextBox -->
                <TextBlock Text="User ID"
                           FontWeight="SemiBold"
                           Foreground="#555"
                           Canvas.Left="215"
                           Canvas.Top="140"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"/>
                <TextBox x:Name="txtUserName"
                         Height="28"
                         Width="250"
                         Padding="4"
                         BorderBrush="#CCC"
                         BorderThickness="1"
                         Background="White"
                         Canvas.Left="215"
                         Canvas.Top="161"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Top"/>

                <!-- 4) Password Label and PasswordBox -->
                <TextBlock Text="Password"
                           FontWeight="SemiBold"
                           Foreground="#555"
                           Canvas.Left="215"
                           Canvas.Top="204"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"/>
                <PasswordBox x:Name="txtPassword"
                             Height="28"
                             Width="250"
                             Padding="4"
                             BorderBrush="#CCC"
                             BorderThickness="1"
                             Background="White"
                             Canvas.Left="215"
                             Canvas.Top="225"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Center"/>

                <!-- 5) License Code Label and TextBox -->
                <TextBlock Text="License Code"
                           FontWeight="SemiBold"
                           Foreground="#555"
                           Canvas.Left="215"
                           Canvas.Top="274"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"/>
                <TextBox x:Name="txtLicenseCode"
                         Height="28"
                         Width="250"
                         Padding="4"
                         BorderBrush="#CCC"
                         BorderThickness="1"
                         Background="White"
                         Canvas.Left="215"
                         Canvas.Top="295"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Center"/>

                <!-- 6) Button to open License Agreement window -->
                <Button x:Name="BtnViewLicense"
                        Content="License agreement"
                        FontWeight="Normal"
                        Foreground="#333"
                        Background="Transparent"
                        BorderBrush="#CCC"
                        Canvas.Left="215"
                        Canvas.Top="340"
                        Width="165"
                        Height="28"
                        Click="BtnViewLicense_Click"
                        Cursor="Hand" />

                <!-- 7) Login Button (styled black/blue) -->
                <Button x:Name="BtnLogin"
                        Content="Login"
                        Height="28"
                        Width="80"
                        Canvas.Left="385"
                        Canvas.Top="340"
                        Padding="4,0"
                        IsDefault="True"
                        Click="BtnLogin_Click"
                        IsEnabled="{Binding ElementName=chkAgree, Path=IsChecked}"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center">
                    <Button.Style>
                        <Style TargetType="Button">
                            <!-- Default = black (disabled) -->
                            <Setter Property="Background" Value="Black"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderBrush" Value="Black"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Style.Triggers>
                                <!-- When IsEnabled = true, switch to blue -->
                                <Trigger Property="IsEnabled" Value="True">
                                    <Setter Property="Background" Value="#0078D7"/>
                                    <Setter Property="BorderBrush" Value="#0078D7"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- 8) “I agree” Checkbox -->
                <CheckBox x:Name="chkAgree"
                          Content="I agree"
                          Foreground="#333"
                          Canvas.Left="397"
                          Canvas.Top="373"/>
            </Canvas>
        </Border>
    </Grid>
</Window>
