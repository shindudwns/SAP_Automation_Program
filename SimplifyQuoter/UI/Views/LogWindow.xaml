<!-- [NEW] File: Views/LogWindow.xaml -->
<Window x:Class="SimplifyQuoter.Views.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Log"
        Width="1100" Height="700"
        WindowStartupLocation="CenterOwner"
        Background="White"
        Loaded="Window_Loaded"
        >
    <Window.Resources>

        <SolidColorBrush x:Key="PrimaryBrush"   Color="#E5E7EB"   />
        <!-- 보라 100 -->
        <SolidColorBrush x:Key="PrimaryBrushHover" Color="#E5E7EB" />
        <!-- 보라 200 -->

        <!-- 조금 진한 보라500 -->
        <SolidColorBrush x:Key="SubtleBorder" Color="#E5E7EB"/>

        <!-- 둥근 버튼 스타일 -->
        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Foreground" Value="#4C1D95"/>
            <!-- 진보라 텍스트 -->
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="2"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background"
                                        Value="{StaticResource PrimaryBrushHover}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 라이트(회색) 버튼: CSV 등에 사용 -->
        <Style x:Key="LightButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Foreground" Value="#111827"/>
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                BorderBrush="{StaticResource SubtleBorder}"
                                BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="2"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#E5E7EB"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGrid 공통 -->
        <Style TargetType="DataGrid">
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="RowHeaderWidth" Value="0"/>
            <Setter Property="BorderBrush" Value="{StaticResource SubtleBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="AlternationCount" Value="2"/>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 상단 필터 바 -->
        <Border Grid.Row="0" Padding="12" CornerRadius="10"
                Background="#FAFAFA" BorderBrush="{StaticResource SubtleBorder}" BorderThickness="1">
            <!-- 좁아지면 자동 줄바꿈되도록 WrapPanel -->
            <WrapPanel VerticalAlignment="Center">
                <TextBlock Text="User:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBox x:Name="TxtUser" Width="140" Margin="0,0,12,0"/>

                <TextBlock Text="From:" VerticalAlignment="Center" Margin="8,0,8,0"/>
                <DatePicker x:Name="DpFrom" Width="155" Margin="0,0,12,0"/>

                <TextBlock Text="To:" VerticalAlignment="Center" Margin="8,0,8,0"/>
                <DatePicker x:Name="DpTo" Width="155" Margin="0,0,12,0"/>
                <CheckBox x:Name="ChkAuto" Content="Apply"
                          VerticalAlignment="Center"
                          Checked="ChkAuto_Checked"
                          Unchecked="ChkAuto_Unchecked"/>

                <Button x:Name="BtnRange1d"  Content="오늘"  Click="BtnRange1d_Click"
                        Style="{StaticResource PrimaryButton}" />
                <Button x:Name="BtnRange7d"  Content="7일"   Click="BtnRange7d_Click"
                        Style="{StaticResource PrimaryButton}"/>
                <Button x:Name="BtnRange30d" Content="30일"  Click="BtnRange30d_Click"
                        Style="{StaticResource PrimaryButton}"/>
                <Button x:Name="BtnRangeAll" Content="전체"   Click="BtnRangeAll_Click"
                        Style="{StaticResource PrimaryButton}"/>

                <Button x:Name="BtnExportCsv" Content="CSV Down"
                        Click="BtnExportCsv_Click" Style="{StaticResource LightButton}"/>
            </WrapPanel>
        </Border>

        <!-- 탭: 로그 + GPT 3종 리포트 -->
        <TabControl x:Name="Tabs" Grid.Row="1" Margin="0,12,0,0">
            <!-- 탭 #0: 기존 로그 -->
            <TabItem Header="로그">
                <DataGrid x:Name="GridLogs"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          Margin="0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Time"    Binding="{Binding Ts}"       Width="180"/>
                        <DataGridTextColumn Header="User"    Binding="{Binding UserId}"   Width="140"/>
                        <DataGridTextColumn Header="Event"   Binding="{Binding Event}"    Width="160"/>
                        <DataGridTextColumn Header="Meta"    Binding="{Binding MetaJson}" Width="*"/>
                        <DataGridTextColumn Header="Machine" Binding="{Binding Machine}"  Width="140"/>
                        <DataGridTextColumn Header="IP"      Binding="{Binding IpAddress}" Width="140"/>
                        <DataGridTextColumn Header="GPT Tokens" Binding="{Binding GptTotalTokens}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- 탭 #1: ① Daily × User -->
            <TabItem Header="GPT · Daily×User">
                <DataGrid x:Name="GridGptDaily"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          Margin="0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Day"
                        Binding="{Binding Day, StringFormat={}{0:yyyy-MM-dd}}"
                        Width="160"/>

                        <DataGridTextColumn Header="User"
                        Binding="{Binding UserId}"
                        Width="200"/>

                        <!-- 여기 수정 -->
                        <DataGridTextColumn Header="Logins"
                        Binding="{Binding Logins, StringFormat=N0}"
                        Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment" Value="Right"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Tokens"
                        Binding="{Binding Tokens, StringFormat=N0}"
                        Width="140">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment" Value="Right"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Calls"
                        Binding="{Binding Calls, StringFormat=N0}"
                        Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment" Value="Right"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>

                </DataGrid>
            </TabItem>

            <!-- 탭 #2: ② Top Users -->
            <TabItem Header="GPT · Top Users">
                <DataGrid x:Name="GridGptTop"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          Margin="0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="User"       Binding="{Binding UserId}"    Width="260"/>
                        <DataGridTextColumn Header="Tokens"     Binding="{Binding Tokens}"    Width="140"/>
                        <DataGridTextColumn Header="Calls"      Binding="{Binding Calls}"     Width="120"/>
                        <DataGridTextColumn Header="Avg Tokens" Binding="{Binding AvgTokens}" Width="140"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- 탭 #3: ③ By Feature -->
            <TabItem Header="GPT · By Feature">
                <DataGrid x:Name="GridGptFeature"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          Margin="0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Feature" Binding="{Binding Feature}" Width="300"/>
                        <DataGridTextColumn Header="Tokens"  Binding="{Binding Tokens}"  Width="140"/>
                        <DataGridTextColumn Header="Calls"   Binding="{Binding Calls}"   Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
