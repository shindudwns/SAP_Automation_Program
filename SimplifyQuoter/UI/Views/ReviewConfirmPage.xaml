<UserControl x:Class="SimplifyQuoter.Views.ReviewConfirmPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto"
             Width="Auto"
             Background="White">

    <!-- We need this converter to toggle Visibility from a boolean -->
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>

    <!-- ──────────────────────────────────────────────────────────────────── -->
    <!-- ONLY ONE direct child of UserControl: the parent Grid.             -->
    <!-- ──────────────────────────────────────────────────────────────────── -->
    <Grid Margin="20">
        <!-- ROW DEFINITIONS (same as before) -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Row 0: Instruction -->
            <RowDefinition Height="Auto"/>
            <!-- Row 1: Tabs + Buttons -->
            <RowDefinition Height="*"/>
            <!-- Row 2: DataGrids -->
            <RowDefinition Height="12"/>
            <!-- Row 3: Spacer -->
        </Grid.RowDefinitions>

        <!-- Row 0: Instruction Text -->
        <TextBlock Grid.Row="0"
                   Text="Review the data below. When ready, click Confirm &amp; Process."
                   FontSize="14"
                   FontWeight="SemiBold"
                   Margin="0,0,0,12"/>

        <!-- Row 1: DockPanel with TabControl (left) + Buttons (right) -->
        <DockPanel Grid.Row="1"
                   LastChildFill="False"
                   Margin="0,0,0,12"
                   VerticalAlignment="Center">

            <!-- (1) TabControl docked Left -->
            <TabControl x:Name="PreviewTabs"
                        DockPanel.Dock="Left"
                        SelectedIndex="0"
                        Background="Transparent"
                        BorderThickness="0"
                        SelectionChanged="PreviewTabs_SelectionChanged">
                <TabItem x:Name="TabItem_MasterPreview"
                         Header="Item Master Preview"
                         FontSize="12"
                         FontWeight="SemiBold"
                         Padding="8,4"/>
                <TabItem x:Name="TabItem_QuotePreview"
                         Header="Quotation Preview (0)"
                         FontSize="12"
                         FontWeight="SemiBold"
                         Padding="8,4"/>
            </TabControl>

            <!-- (2) Confirm & Process (docked Right) -->
            <Button x:Name="BtnConfirm"
                    DockPanel.Dock="Right"
                    Content="Confirm &amp; Process"
                    Width="140"
                    Height="32"
                    Background="#3A7BD5"
                    Foreground="White"
                    FontWeight="SemiBold"
                    Click="BtnConfirm_Click"
                    Margin="8,0,0,0"/>

            <!-- (3) Replace Excel (docked Right) -->
            <Button x:Name="BtnReplaceExcel"
                    DockPanel.Dock="Right"
                    Content="Replace Excel"
                    Width="100"
                    Height="32"
                    Padding="12,0"
                    FontWeight="SemiBold"
                    Click="BtnReplaceExcel_Click"
                    Margin="0,0,8,0"/>

            <!-- (4) Download Icon (docked Right) -->
            <Button x:Name="BtnDownload"
                    DockPanel.Dock="Right"
                    Width="32"
                    Height="32"
                    ToolTip="Download Excel"
                    Click="BtnDownload_Click"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Margin="0,0,8,0">
                <Image Source="/Assets/download_icon.png"
                       Stretch="Uniform"/>
            </Button>

            <!-- (5) Search Icon (docked Right) -->
            <Button x:Name="BtnSearch"
                    DockPanel.Dock="Right"
                    Width="32"
                    Height="32"
                    ToolTip="Search"
                    Click="BtnSearch_Click"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Margin="0,0,8,0">
                <Image Source="/Assets/search_icon.png"
                       Stretch="Uniform"/>
            </Button>
        </DockPanel>

        <!-- Row 2: DataGrids container -->
        <Grid Grid.Row="2">
            <!-- ItemMasterDataGrid (visible by default) -->
            <DataGrid x:Name="ItemMasterDataGrid"
                      AutoGenerateColumns="False"
                      CanUserResizeColumns="True"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      GridLinesVisibility="All"
                      RowBackground="#FFFFFF"
                      AlternatingRowBackground="#F9F9F9"
                      HorizontalGridLinesBrush="#DDDDDD"
                      VerticalGridLinesBrush="#DDDDDD"
                      FontSize="12"
                      ColumnHeaderHeight="30"
                      RowHeight="28"
                      Visibility="Visible">
                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#F0F0F0"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                    </Style>
                    <Style TargetType="DataGridCell">
                        <Setter Property="BorderBrush" Value="#DDDDDD"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="Padding" Value="4,2"/>
                    </Style>
                </DataGrid.Resources>
            </DataGrid>

            <!-- QuotationDataGrid (initially collapsed) -->
            <DataGrid x:Name="QuotationDataGrid"
                      AutoGenerateColumns="False"
                      CanUserResizeColumns="True"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      GridLinesVisibility="All"
                      RowBackground="#FFFFFF"
                      AlternatingRowBackground="#F9F9F9"
                      HorizontalGridLinesBrush="#DDDDDD"
                      VerticalGridLinesBrush="#DDDDDD"
                      FontSize="12"
                      ColumnHeaderHeight="30"
                      RowHeight="28"
                      Visibility="Collapsed">
                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#F0F0F0"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                    </Style>
                    <Style TargetType="DataGridCell">
                        <Setter Property="BorderBrush" Value="#DDDDDD"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="Padding" Value="4,2"/>
                    </Style>
                </DataGrid.Resources>
            </DataGrid>
        </Grid>

        <!-- Row 3: Spacer (blank) -->
        <Grid Grid.Row="3"/>

        <!-- ──────────────────────────────────────────────────────────────────── -->
        <!-- LOADING OVERLAY (covers Row 0–3 when IsLoading=true)              -->
        <!-- This is a sibling of the above content, all inside the same parent Grid. -->
        <!-- ──────────────────────────────────────────────────────────────────── -->
        <Border
            Background="#CCFFFFFF"
            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}"
            Grid.Row="0" Grid.RowSpan="4">

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        >
                <TextBlock
                    Text="{Binding LoadingText}"
                    FontSize="24"
                    FontWeight="Bold"
                    Foreground="#444444"/>
                <Button x:Name="BtnSkipAI"
                        Content="Skip AI"
                        FontSize="14"
                        Padding="8,4"
                        Click="BtnSkipAI_Click"/>
            </StackPanel>
        </Border>


    </Grid>
</UserControl>
