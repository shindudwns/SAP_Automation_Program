<Window x:Class="SimplifyQuoter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Simplify Quoter" Height="600" Width="900">

    <Window.Resources>
        <!-- Flat icon‐only button style -->
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="SAP Automation"
                   FontSize="26"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,20,0,10" />

        <!-- Icon buttons with manual margins instead of Spacing -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,30">

            <!-- First button gets right‐margin for spacing -->
            <Button Style="{StaticResource IconButtonStyle}"
                    Name="BtnUpload"
                    Click="BtnUpload_Click"
                    Margin="0,0,280,0">
                <StackPanel>
                    <Image Source="/SimplifyQuoter;component/Assets/excel_icon.png"
                           Width="80" Height="80"/>
                    <TextBlock Text="SAP Automation"
                               Margin="0,8,0,0"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>

            <!-- Second button has no extra margin -->
            <Button Style="{StaticResource IconButtonStyle}"
                    Name="BtnImport"
                    Click="BtnImport_Click">
                <StackPanel>
                    <Image Source="/SimplifyQuoter;component/Assets/txt_icon.png"
                           Width="80" Height="80"/>
                    <TextBlock Text="Import txt"
                               Margin="0,8,0,0"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- Your DataGrid -->
        <DataGrid Grid.Row="2"
                  x:Name="SheetGrid"
                  AutoGenerateColumns="False"
                  CanUserResizeColumns="True"
                  SelectionUnit="Cell"
                  SelectionMode="Extended"
                  SelectedCellsChanged="SheetGrid_SelectedCellsChanged"
                  SelectionChanged="SheetGrid_SelectionChanged">
            <!-- keep your existing RowStyle & dynamic column logic -->
        </DataGrid>
    </Grid>
</Window>
