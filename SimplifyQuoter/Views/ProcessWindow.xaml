<Window x:Class="SimplifyQuoter.Views.ProcessWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Review &amp; Automate" Height="500" Width="900">
    <DockPanel Margin="10">
        <TabControl>

            <!-- Item Master Data Tab -->
            <TabItem Header="Item Master Data">
                <DockPanel>

                    <Button Name="BtnProcessIMD"
                  Content="Process Item Master Data"
                  DockPanel.Dock="Top"
                  Margin="0,0,0,10"
                  Width="200"
                  Click="BtnProcessIMD_Click"/>
                    <DataGrid x:Name="ImdGrid"
                    AutoGenerateColumns="False"
                    CanUserResizeColumns="True"
                    CanUserAddRows="False"
                    CanUserSortColumns="True"
                    HeadersVisibility="Column"
                    GridLinesVisibility="All">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="#"
                                  Binding="{Binding Sequence}"
                                  SortMemberPath="Sequence"
                                  Width="Auto"/>
                            <DataGridTextColumn Header="Item No."
                                  Binding="{Binding ItemNo}"
                                  SortMemberPath="ItemNo"
                                  Width="Auto"/>
                            <DataGridTextColumn Header="Description"
                                  Binding="{Binding Description}"
                                  SortMemberPath="Description"
                                  Width="*"/>
                            <DataGridTextColumn Header="Part Number"
                                  Binding="{Binding PartNumber}"
                                  SortMemberPath="PartNumber"
                                  Width="Auto"/>
                            <DataGridTextColumn Header="Item Group"
                                  Binding="{Binding ItemGroup}"
                                  SortMemberPath="ItemGroup"
                                  Width="Auto"/>

                            <DataGridTextColumn Header="Preferred Vendor"
                                  Binding="{Binding PreferredVendor}"
                                  SortMemberPath="PreferredVendor"
                                  Width="Auto"/>


                            <DataGridTextColumn Header="Purchasing UoM"
                                Binding="{Binding PurchasingUoM}"
                                SortMemberPath="PurchasingUoM"
                                Width="Auto"/>
                                        <DataGridTextColumn Header="Sales UoM"
                                Binding="{Binding SalesUoM}"
                                SortMemberPath="SalesUoM"
                                Width="Auto"/>
                                        <DataGridTextColumn Header="Inventory UoM"
                                Binding="{Binding InventoryUoM}"
                                SortMemberPath="InventoryUoM"
                                Width="Auto"/>

                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </TabItem>

            <!-- Sales Quotation Tab -->
            <TabItem Header="Sales Quotation">
                <DockPanel>

                    <Button Name="BtnProcessSQ"
                  Content="Process Sales Quotation"
                  DockPanel.Dock="Top"
                  Margin="0,0,0,10"
                  Width="200"
                  Click="BtnProcessSQ_Click"/>

                    <DataGrid x:Name="SqGrid"
                    AutoGenerateColumns="False"
                    CanUserResizeColumns="True"
                    CanUserAddRows="False"
                    CanUserSortColumns="True"
                    HeadersVisibility="Column"
                    GridLinesVisibility="All" SelectionChanged="SqGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="#"
                                  Binding="{Binding Sequence}"
                                  SortMemberPath="Sequence"
                                  Width="Auto"/>
                            <DataGridTextColumn Header="Name"
                                  Binding="{Binding Name}"
                                  SortMemberPath="Name"
                                  Width="*"/>
                            <DataGridTextColumn Header="Item No."
                                  Binding="{Binding ItemNo}"
                                  SortMemberPath="ItemNo"
                                  Width="Auto"/>
                            <DataGridTextColumn Header="Quantity"
                                  Binding="{Binding Quantity}"
                                  SortMemberPath="Quantity"
                                  Width="Auto"/>
                            <DataGridTextColumn Header="Free Text"
                                  Binding="{Binding FreeText}"
                                  SortMemberPath="FreeText"
                                  Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </TabItem>

        </TabControl>
    </DockPanel>
</Window>
