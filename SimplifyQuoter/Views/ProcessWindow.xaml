<Window x:Class="SimplifyQuoter.Views.ProcessWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Process Selected Rows" Height="450" Width="700">
	<DockPanel Margin="10">

		<!-- Action buttons at the top -->
		<StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
			<Button Name="BtnItemMaster"
					Content="Process Item Master Data"
					Width="180"
					Margin="0,0,10,0"
					Click="BtnItemMaster_Click"/>
			<Button Name="BtnSalesQuote"
					Content="Process Sales Quotation"
					Width="160"
					Click="BtnSalesQuote_Click"/>
		</StackPanel>

		<!-- Your grid of extracted fields -->
		<DataGrid x:Name="ProcessGrid"
				  AutoGenerateColumns="False"
				  CanUserResizeColumns="True"
				  GridLinesVisibility="All"
				  HeadersVisibility="All">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Row"       Binding="{Binding RowIndex}" Width="Auto"/>
				<DataGridTextColumn Header="Name"      Binding="{Binding CustomerName}" Width="*"/>
				<DataGridTextColumn Header="Item No."  Binding="{Binding ItemCode}" Width="Auto"/>
				<DataGridTextColumn Header="Quantity"  Binding="{Binding Quantity}" Width="Auto"/>
				<DataGridTextColumn Header="Free Text" Binding="{Binding FreeText}" Width="2*"/>
			</DataGrid.Columns>
		</DataGrid>

	</DockPanel>
</Window>
